.headband {
  background: $headband-bg;
  height: $headband-height;
  position: fixed;
  z-index: 999999999;
  top: 0;
  left: 0;
  right: 0;
  height: 2px;
  background: linear-gradient(90deg, #FF0000, #FF7F00, #FFFF00, #00FF00, #00FFFF, #0000FF, #8B00FF);
  box-shadow: 0 0px 1em rgba(255, 255, 255, 0.5);
}
